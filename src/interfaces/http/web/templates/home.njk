{% extends "layout.njk" %}

{% block content %}
  <div class="space-y-8">
    <!-- Hero Section -->
    <div class="text-center space-y-4">
      <div class="inline-flex items-center gap-2 rounded-full border border-blue-200/60 bg-blue-50/50 px-4 py-1.5 text-sm font-medium text-blue-700 backdrop-blur">
        <span class="relative flex h-2 w-2">
          <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-blue-400 opacity-75"></span>
          <span class="relative inline-flex h-2 w-2 rounded-full bg-blue-500"></span>
        </span>
        Fast, secure, and simple
      </div>
      <h1 class="text-4xl font-bold tracking-tight sm:text-5xl">
        Shorten links,
        <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">instantly</span>
      </h1>
      <p class="mx-auto max-w-2xl text-lg text-slate-600">
        Transform long URLs into memorable short links. Track clicks, set expiration dates, and share with confidence.
      </p>
    </div>

    <!-- Error Banner -->
    {% if errorSummary %}
      <div class="rounded-2xl border border-red-200/80 bg-gradient-to-br from-red-50 to-red-100/50 p-5 shadow-lg shadow-red-500/10 backdrop-blur" role="alert" aria-live="polite">
        <div class="flex items-start gap-3">
          <svg class="h-5 w-5 shrink-0 text-red-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
          <div class="flex-1">
            <div class="font-semibold text-red-900">Please fix the following:</div>
            <ul class="mt-2 space-y-1 text-sm text-red-800">
              {% for msg in errorSummary %}
                <li class="flex items-start gap-2">
                  <span class="text-red-600">•</span>
                  <span>{{ msg }}</span>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    {% endif %}

    <!-- Main Grid -->
    <div class="grid gap-6 lg:grid-cols-[1fr_360px]">
      <!-- Form Section -->
      <section class="group relative overflow-hidden rounded-3xl border border-slate-200/60 bg-white p-6 shadow-xl shadow-slate-200/50 transition sm:p-8">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 via-transparent to-indigo-50/30 opacity-0 transition group-hover:opacity-100"></div>

        <div class="relative">
          <form method="post" action="/api/links" class="space-y-6" novalidate>
            <!-- URL Input -->
            <div class="space-y-2">
              <label for="url" class="flex items-center gap-2 text-sm font-semibold text-slate-900">
                <svg class="h-4 w-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                </svg>
                URL to shorten
              </label>
              <div class="relative">
                <input
                  id="url"
                  name="url"
                  type="url"
                  inputmode="url"
                  autocomplete="url"
                  required
                  placeholder="https://example.com/some/very/long/path/to/shorten"
                  value="{{ form.url | default('') }}"
                  class="w-full rounded-xl border bg-white px-4 py-3 pr-12 text-base shadow-sm outline-none transition
                         {% if fieldErrors.url %}border-red-300 ring-2 ring-red-100 focus:border-red-500 focus:ring-red-200{% else %}border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-100{% endif %}
                         placeholder:text-slate-400"
                />
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-4">
                  <kbd class="rounded-md border border-slate-200 bg-slate-50 px-2 py-0.5 text-xs font-medium text-slate-500">↵</kbd>
                </div>
              </div>
              {% if fieldErrors.url %}
                <p class="flex items-center gap-1.5 text-sm text-red-700" id="url-error">
                  <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                  {{ fieldErrors.url }}
                </p>
              {% else %}
                <p class="text-xs text-slate-500">Must include https:// or http://</p>
              {% endif %}
            </div>

            <!-- Optional Fields -->
            <div class="grid gap-5 sm:grid-cols-2">
              <div class="space-y-2">
                <label for="customAlias" class="flex items-center gap-2 text-sm font-semibold text-slate-900">
                  <svg class="h-4 w-4 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                  Custom alias
                  <span class="text-xs font-normal text-slate-500">(optional)</span>
                </label>
                <input
                  id="customAlias"
                  name="customAlias"
                  type="text"
                  autocapitalize="off"
                  spellcheck="false"
                  placeholder="my-link"
                  value="{{ form.customAlias | default('') }}"
                  class="w-full rounded-xl border border-slate-200 bg-white px-4 py-3 font-mono text-sm shadow-sm outline-none transition focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 placeholder:text-slate-400"
                />
                <p class="text-xs text-slate-500">Letters, numbers, <code class="rounded bg-slate-100 px-1 py-0.5">-</code> and <code class="rounded bg-slate-100 px-1 py-0.5">_</code></p>
              </div>

              <div class="space-y-2">
                <label for="expiresAt" class="flex items-center gap-2 text-sm font-semibold text-slate-900">
                  <svg class="h-4 w-4 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Expires at
                  <span class="text-xs font-normal text-slate-500">(optional)</span>
                </label>
                <input
                  id="expiresAt"
                  name="expiresAt"
                  type="datetime-local"
                  value="{{ form.expiresAt | default('') }}"
                  class="w-full rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm shadow-sm outline-none transition focus:border-purple-500 focus:ring-2 focus:ring-purple-100"
                />
                <p class="text-xs text-slate-500">Link will stop working after this time</p>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="flex flex-col gap-4 pt-2 sm:flex-row sm:items-center sm:justify-between">
              <button
                type="submit"
                data-submit
                data-label="Shorten URL"
                class="group/btn relative inline-flex items-center justify-center gap-2 overflow-hidden rounded-xl bg-gradient-to-r from-blue-600 to-indigo-600 px-6 py-3.5 font-semibold text-white shadow-lg shadow-blue-500/30 outline-none transition hover:shadow-xl hover:shadow-blue-500/40 focus:ring-2 focus:ring-blue-500/50 disabled:opacity-70"
              >
                <span class="absolute inset-0 bg-gradient-to-r from-blue-500 to-indigo-500 opacity-0 transition group-hover/btn:opacity-100"></span>
                <svg class="relative h-5 w-5 transition group-hover/btn:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                <span class="relative">Shorten URL</span>
              </button>

              <div class="flex items-center gap-2 text-xs text-slate-500">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>Press <kbd class="rounded border border-slate-300 bg-slate-50 px-1.5 py-0.5 font-mono">Enter</kbd> to submit</span>
              </div>
            </div>
          </form>
        </div>
      </section>

      <!-- Sidebar -->
      <aside class="space-y-4">
        <!-- Result Card -->
        {% if result %}
          <section class="relative overflow-hidden rounded-2xl border border-green-200/60 bg-gradient-to-br from-green-50 to-emerald-50/50 p-6 shadow-lg shadow-green-500/10">
            <div class="absolute right-4 top-4">
              <div id="copyToast" class="pointer-events-none translate-y-1 rounded-lg bg-slate-900 px-3 py-2 text-sm font-medium text-white opacity-0 shadow-xl transition-all" aria-live="polite"></div>
            </div>

            <div class="space-y-4">
              <div class="flex items-center gap-2">
                <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-green-500 text-white shadow-lg shadow-green-500/30">
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div>
                  <h2 class="font-bold text-green-900">Success!</h2>
                  <p class="text-sm text-green-700">Your short link is ready</p>
                </div>
              </div>

              <div class="space-y-3">
                <div class="relative">
                  <input
                    id="shortUrl"
                    type="text"
                    readonly
                    value="{{ result.shortUrl }}"
                    class="w-full rounded-xl border border-green-200 bg-white px-4 py-3 pr-20 font-mono text-sm text-slate-900 shadow-sm"
                  />
                  <button
                    type="button"
                    data-copy-target="shortUrl"
                    data-copy-toast="copyToast"
                    class="absolute right-2 top-1/2 -translate-y-1/2 rounded-lg bg-green-600 px-4 py-2 text-sm font-medium text-white shadow-sm transition hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500/50"
                  >
                    Copy
                  </button>
                </div>

                <div class="flex items-center justify-between gap-3 text-sm">
                  <a href="{{ result.shortUrl }}" target="_blank" class="inline-flex items-center gap-1.5 rounded-lg font-medium text-green-700 transition hover:text-green-900 focus:outline-none focus:ring-2 focus:ring-green-500/50">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                    Open
                  </a>
                  {% if result.statsUrl %}
                    <a href="{{ result.statsUrl }}" class="inline-flex items-center gap-1.5 rounded-lg font-medium text-green-700 transition hover:text-green-900 focus:outline-none focus:ring-2 focus:ring-green-500/50">
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                      </svg>
                      Stats
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
          </section>
        {% else %}
          <section class="rounded-2xl border border-slate-200/60 bg-white/70 p-6 backdrop-blur">
            <div class="flex items-start gap-3">
              <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-xl bg-slate-100">
                <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <div>
                <h2 class="font-semibold text-slate-900">Ready to go</h2>
                <p class="mt-1 text-sm text-slate-600">
                  Enter a URL above and click "Shorten" to create your first link.
                </p>
              </div>
            </div>
          </section>
        {% endif %}

        <!-- Recent Links -->
        <section class="rounded-2xl border border-slate-200/60 bg-white/70 p-6 backdrop-blur">
          <div class="flex items-center gap-2">
            <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h2 class="font-semibold text-slate-900">Recent links</h2>
          </div>

          {% if recentLinks and recentLinks.length > 0 %}
            <ul class="mt-4 space-y-2">
              {% for item in recentLinks %}
                <li class="group flex items-center justify-between gap-3 rounded-lg border border-slate-100 bg-slate-50/50 p-3 transition hover:border-slate-200 hover:bg-slate-50">
                  <a href="{{ item.shortUrl }}" class="min-w-0 flex-1 truncate font-mono text-sm text-slate-700 transition group-hover:text-slate-900">
                    {{ item.shortUrl }}
                  </a>
                  <a href="{{ item.statsUrl }}" class="shrink-0 rounded-md bg-white px-2 py-1 text-xs font-medium text-slate-600 shadow-sm transition hover:bg-slate-100 hover:text-slate-900">
                    Stats
                  </a>
                </li>
              {% endfor %}
            </ul>
          {% else %}
            <p class="mt-3 text-sm text-slate-600">Your recent links will appear here</p>
          {% endif %}
        </section>

        <!-- Privacy Info -->
        <section class="rounded-2xl border border-blue-200/60 bg-gradient-to-br from-blue-50/50 to-indigo-50/30 p-6 backdrop-blur">
          <div class="flex items-start gap-3">
            <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-xl bg-blue-500 text-white">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <div>
              <h2 class="font-semibold text-blue-900">Privacy first</h2>
              <p class="mt-1 text-sm leading-relaxed text-blue-800">
                We use hashed IPs for abuse prevention. No raw IP addresses are ever stored.
              </p>
            </div>
          </div>
        </section>
      </aside>
    </div>
  </div>
{% endblock %}
