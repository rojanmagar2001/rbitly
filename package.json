{
  "name": "rbitly",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "concurrently \"npm run css:watch\" \"tsdown --watch ./src --onSuccess \\\"node dist/server.cjs\\\"\"",
    "start": "node dist/server.cjs",
    "build": "npm run css:build && tsdown",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --create-only",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "css:build": "tailwindcss -i ./src/interfaces/http/web/assets/input.css -o ./public/assets/app.css --minify",
    "css:watch": "tailwindcss -i ./src/interfaces/http/web/assets/input.css -o ./public/assets/app.css --watch",
    "test:e2e": "playwright test",
    "docker:build": "docker build -t rbitly:local .",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down -v",
    "docker:logs": "docker compose logs -f app",
    "docker:ps": "docker compose ps",
    "docker:migrate": "docker compose exec app pnpm prisma migrate deploy",
    "k8s:deploy": "bash scripts/k8s-deploy.sh",
    "k8s:cleanup": "bash scripts/k8s-cleanup.sh",
    "k8s:logs": "bash scripts/k8s-logs.sh",
    "k8s:logs:app": "bash scripts/k8s-logs.sh app",
    "k8s:logs:postgres": "bash scripts/k8s-logs.sh postgres",
    "k8s:logs:redis": "bash scripts/k8s-logs.sh redis",
    "k8s:logs:migrate": "bash scripts/k8s-logs.sh migrate",
    "k8s:status": "kubectl -n rbitly get all",
    "k8s:restart": "kubectl -n rbitly rollout restart deployment/rbitly && kubectl -n rbitly rollout status deployment/rbitly",
    "k8s:rebuild": "docker build -t rbitly:local . && kind load docker-image rbitly:local --name rbitly && pnpm k8s:restart",
    "k8s:shell": "kubectl -n rbitly get pods && echo '\nEnter pod name:' && read pod && kubectl -n rbitly exec -it $pod -- sh",
    "k8s:psql": "kubectl -n rbitly exec -it statefulset/postgres -- psql -U rbitly -d rbitly",
    "k8s:redis": "kubectl -n rbitly exec -it statefulset/redis -- redis-cli"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{ts,tsx,js,cjs,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.3",
    "@types/nunjucks": "^3.2.6",
    "@types/pg": "^8.16.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "ioredis": "^5.8.2",
    "lint-staged": "^16.2.7",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "testcontainers": "^11.10.0",
    "tsdown": "^0.18.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/formbody": "^8.0.2",
    "@fastify/static": "^8.3.0",
    "@fastify/view": "^11.1.1",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "nunjucks": "^3.2.4",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "prisma": "^7.2.0",
    "prom-client": "^15.1.3",
    "zod": "^4.2.1"
  }
}
